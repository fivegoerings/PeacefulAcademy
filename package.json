{
  "name": "peaceful-academy",
  "version": "1.0.0",
  "description": "A homeschool tracking application for Peaceful Fields Academy with Netlify functions and Neon database",
  "main": "index.html",
  "scripts": {
    "dev": "netlify dev",
    "build": "echo 'Static site - no build required'",
    "deploy": "netlify deploy --prod",
    "functions:dev": "netlify dev --functions",
    "functions:build": "netlify functions:build",
    "test": "echo 'No tests specified' && exit 0",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "netlify dev:exec drizzle-kit migrate",
    "db:studio": "netlify dev:exec drizzle-kit studio"
  },
  "keywords": [
    "homeschool",
    "education",
    "tracking",
    "netlify",
    "neon",
    "postgresql",
    "static-site"
  ],
  "author": "Peaceful Fields Academy",
  "license": "MIT",
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1"
  },
  "devDependencies": {
    "@netlify/functions": "^2.0.0",
    "netlify-cli": "^17.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/peaceful-fields-academy.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/peaceful-fields-academy/issues"
  },
  "homepage": "https://peaceful-fields-academy.netlify.app"
}